        <activity android:name=".LoginActivity" android:exported="true">
            <intent-filter android:label="login">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="meltingbooks"
                    android:host="callback" />
            </intent-filter>
        </activity>



        <!-- 구글 로그인 콜백 Activity -->
        <activity android:name=".GoogleLoginCallbackActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- 백엔드에 등록한 redirect_uri 스킴 -->
                <data android:scheme="meltingbooks" android:host="callback" />
            </intent-filter>
        </activity>


        <activity android:name=".SplashActivity" android:exported="true"/>

        <!-- 기존의 MainActivity 설정 -->
        <activity android:name=".FeedActivity" android:windowSoftInputMode="adjustResize" android:exported="true"/>
        <activity android:name=".UploadAudio" android:windowSoftInputMode="adjustResize" android:exported="true"/>
        <activity android:name=".BrowseActivity" android:windowSoftInputMode="adjustResize" android:exported="true"/>

        <!-- 캘린더 액티비티 -->
        <activity android:name=".CalendarActivity" android:windowSoftInputMode="adjustPan"/>

        <!-- 프로필 액티비티 -->
        <activity android:name=".ProfileActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".SettingProfile" android:windowSoftInputMode="adjustResize" android:exported="true"/>
        <activity android:name=".SettingApp" android:windowSoftInputMode="adjustResize" android:exported="true"/>

        <!-- 그룹 관련 액티비티 -->
        <activity android:name=".GroupActivity" android:windowSoftInputMode="adjustResize" android:exported="true"/>
        <activity android:name=".GroupWriteActivity" android:windowSoftInputMode="adjustResize" android:exported="true"/>
        <activity android:name=".GroupJoinActivity" android:windowSoftInputMode="adjustResize" android:exported="true"/>
        <activity android:name=".GroupNewCreateActivity" android:windowSoftInputMode="adjustResize" android:exported="true"/>
        <activity android:name=".GroupProfileActivity" android:windowSoftInputMode="adjustResize" android:exported="true"/>
        <activity android:name=".GroupCommentActivity" android:windowSoftInputMode="adjustResize" android:exported="true"/>
        <activity android:name=".SearchActivity" android:windowSoftInputMode="adjustResize" android:exported="true"/>

    </application>
</manifest>
