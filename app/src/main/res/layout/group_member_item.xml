<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/memberImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/group_memebr_profile" />

            <TextView
                android:id="@+id/memberName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="멤버명"
                android:textSize="15sp"
                android:textColor="@color/textColor" />

            <ImageView
                android:id="@+id/myself"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/group_member_checkbox"
                android:scaleType="fitCenter"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:contentDescription="내 프로필"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/groupCheckBoxImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/group_member_menu"
                android:scaleType="fitCenter"
                android:layout_marginRight="15dp"
                android:contentDescription="멤버 세부사항"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
